<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- LinearLayout to align ImageView, bankName, and bankAccountNumber horizontally -->
        <LinearLayout
            android:id="@+id/imageandbankLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_alignParentTop="true">

            <!-- ImageView on the left side -->
            <ImageView
                android:id="@+id/bankLogo"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                 />

            <!-- Vertical LinearLayout for TextViews -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="8dp"
                android:layout_gravity="center_vertical">

                <TextView
                    android:id="@+id/bankName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bank Name"
                    android:textSize="16sp"
                    android:textColor="@android:color/black" />

                <TextView
                    android:id="@+id/bankAccountNumber"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="**** **** **** 1234"
                    android:textSize="14sp"
                    android:textColor="@android:color/black" />
            </LinearLayout>
        </LinearLayout>

        <!-- Amount and Time below the LinearLayout -->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageandbankLayout"
            android:layout_marginTop="8dp">

            <!-- Bank Balance aligned to the start -->
            <TextView
                android:id="@+id/bankBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="â‚¹50,000"
                android:textSize="18sp"
                android:textColor="@android:color/holo_green_dark"
                android:layout_alignParentStart="true" />

            <!-- Bank Time aligned to the end -->
            <TextView
                android:id="@+id/bankTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Last Updated: 12:30 PM"
                android:textSize="12sp"
                android:textColor="@android:color/darker_gray"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>
